<?xml version='1.0' encoding='utf-8'?>
<widget id="com.subreference.gwama" version="1" android-versionCode="3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Nung Gwama</name>
    <description>
       The Terrible Nung Gwama is an interactive retelling of the Chinese tale in which a poor young woman tries to outwit a terrible monster before he eats her.
    </description>
    <author email="russell.morgan@subreference.com" href="http://www.subreference.com">
        Subreference Studios llc
    </author>
    <content src="index.html" />
    <access origin="*" />
    
    
    <preference name="Orientation"                value="portrait" />        
    <preference name="target-device"              value="universal" />      
    <preference name="Fullscreen"                 value="true" />           
    <preference name="webviewbounce"              value="false" />           
    <preference name="prerendered-icon"           value="true" />    
    <preference name="android-installLocation"    value="auto" />  
    <preference name="DisallowOverscroll" value="true"/>  
    

    
    <!-- Define app icon for each platform. -->
    <icon src="res/icon/android/icon-192-xhdpi.png" />
    
    <!-- Android Icons -->
    <platform name="android">
    	<icon src="res/icon/android/icon-72-hdpi.png"   density="hdpi" />
    	<icon src="res/icon/android/icon-96-xhdpi.png"  density="xhdpi" />
    	<icon src="res/icon/android/icon-144-xhdpi.png"  density="xxhdpi" />
    	<icon src="res/icon/android/icon-192-xhdpi.png"  density="xxxhdpi" />
    </platform>
    
    <platform name="ios">
                  <!-- iOS 7.0+ -->
                  <!-- iPhone / iPod Touch  -->
                  <icon src="res/ios/icon-60.png" width="60" height="60" />
                  <icon src="res/ios/icon-60@2x.png" width="120" height="120" />
                  <!-- iPad -->
                  <icon src="res/ios/icon-76.png" width="76" height="76" />
                  <icon src="res/ios/icon-76@2x.png" width="152" height="152" />
                  <!-- iOS 6.1 -->
                  <!-- Spotlight Icon -->
                  <icon src="res/ios/icon-40.png" width="40" height="40" />
                  <icon src="res/ios/icon-40@2x.png" width="80" height="80" />
                  <!-- iPhone / iPod Touch -->
                  <icon src="res/ios/icon.png" width="57" height="57" />
                  <icon src="res/ios/icon@2x.png" width="114" height="114" />
                  <!-- iPad -->
                  <icon src="res/ios/icon-72.png" width="72" height="72" />
                  <icon src="res/ios/icon-72@2x.png" width="144" height="144" />
                  <!-- iPhone Spotlight and Settings Icon -->
                  <icon src="res/ios/icon-small.png" width="29" height="29" />
                  <icon src="res/ios/icon-small@2x.png" width="58" height="58" />
                  <!-- iPad Spotlight and Settings Icon -->
                  <icon src="res/ios/icon-50.png" width="50" height="50" />
                  <icon src="res/ios/icon-50@2x.png" width="100" height="100" />
     </platform>  
         
</widget>
